{
    "/tables/event-status-host": {
        "tags": [
            "Tables"
        ],
        "summary": "Status of the done by host or not",
        "description": "Use this API to know event is conducted or not..",
        "operationId": "tablesEventStatusHost",
        "requestBody": {
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "page": {
                                "description": "Page number to retrieve.",
                                "type": "string",
                                "example": "1"
                            },
                            "limit": {
                                "description": "Number of items per page.",
                                "type": "string",
                                "example": "1"
                            },
                            "table_id": {
                                "description": "Unique identifier of the table.",
                                "type": "integer",
                                "example": 964
                            },
                            "event_done_flag": {
                                "description": "Flag indicating if the event is done.",
                                "type": "boolean",
                                "example": true
                            }
                        },
                        "required": ["table_id", "event_done_flag"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Payment processed for the event or error message.",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "description": "Error message if the event is already completed.",
                                    "type": "string",
                                    "example": "Already event completed"
                                },
                                "message": {
                                    "description": "Confirmation message regarding payment.",
                                    "type": "string",
                                    "example": "Payment processed for the event"
                                }
                            }
                        }
                    }
                }
            },
            "400": {
                "description": "Bad request"
            },
            "401": {
                "description": "Unauthorized"
            },
            "403": {
                "description": "You don't have permission to perform this action"
            },
            "500": {
                "description": "Internal server error"
            }
        }
    }
}
